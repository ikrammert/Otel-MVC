@model Hotel

<div class="display-6">
    Create
</div>

<form method="post" asp-action="Create">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-2">
        <label>Hotel Name</label>
        <input name="HotelName" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label>Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    @* <div class="form-group my-2">
    <label asp-for="StarCount"></label>
    <input asp-for="StarCount" class="form-control" />
    </div> *@

    <div class="form-group my-2">
        <label asp-for="Adress"></label>
        <input asp-for="Adress" class="form-control" />
    </div>

    <div class="form-group my-2">
        <label asp-for="StarCount"></label>
        <select asp-for="StarCount" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>

    <fieldset>
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="IsActive" value=@true checked />
            <label>Aktif Olussun</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="IsActive" value=@false />
            <label>Aktif Oluşmasın</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Create</button>
        <a class="btn btn-warning" asp-controller="Home" asp-action="Index">Home</a>
    </div>
</form>