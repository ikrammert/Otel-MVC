@model Hotel

<h1 class="display-4">
    Hotel Details
</h1>

@if (Model != null)
{
    <div class="card">
        <form method="post" asp-action="Update">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="card-header">
                <h5 class="card-title">@Model.HotelName</h5>
            </div>
            <div class="card-body">
                <table class="table table-bordered">

                    @* <tr>
                <th>Attribute</th>
                <th>Value</th>
                </tr> *@
                    <tr>
                        <td>Hotel ID</td>
                        <td><input type="hidden" name="HotelId" value="@Model.HotelId">@Model.HotelId</td>
                    </tr>
                    <tr>
                        <td>Name</td>
                        <td><input name="HotelName" value="@Model.HotelName" class="form-control"></td>
                    </tr>
                    <tr>
                        <td>Number</td>
                        <td><input name="PhoneNumber" value="@Model.PhoneNumber" class="form-control"></td>
                    </tr>
                    <tr>
                        <td>Star Count</td>
                        <td><select asp-for="StarCount" class="form-control">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select></td>
                    </tr>
                    <tr>
                        <td>Address</td>
                        <td><input name="Adress" value="@Model.Adress" class="form-control"></td>
                    </tr>
                    <tr>
                        <td>URL</td>
                        <td>@Model.HotelURL</td>
                    </tr>
                    <tr>
                        <td>Active</td>
                        <td>@Model.IsActive</td>
                    </tr>
                    <tr>
                        <td>Deleted</td>
                        <td>@Model.IsDeleted</td>
                    </tr>
                    <tr>
                        <td>Created At</td>
                        <td>@Model.CreateAt</td>
                    </tr>
                    <tr>
                        <td>Last Modification Time</td>
                        <td>@Model.LastModificationTime</td>
                    </tr>
                    <tr>
                        <td>Deleted At</td>
                        <td>@Model.DeletedAt</td>
                    </tr>
                </table>
            </div>
            <div class="text-center">
                <a asp-action="Index" class="btn btn-secondary">Back to Hotels</a>
                <button class="btn btn-primary" type="submit">Save the changes</button>
            </div>
        </form>
        <div>
            <form method="post" asp-action="Delete" asp-route-hotelId="@Model.HotelId" class="mt-2">
                <button type="submit" class="btn btn-danger">Delete Hotel</button>
            </form>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        Hotel not found.
    </div>
}
