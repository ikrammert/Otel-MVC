@model IEnumerable<Hotel>

@if (Model.Count() > 0)
{
    <h6 class="display-6">
        Applications(@Model.Count())
    </h6>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number</th>
                <th>Created At</th>
                <th>Star</th>
                <th>Adress</th>
                <th>Url</th>
                <th>Aktif</th>
                <th>Silinmi≈ü</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Hotel hotel in Model)
            {
                <tr>
                    <td>@hotel.HotelName</td>
                    <td>@hotel.CreateAt</td>
                    <td>@hotel.PhoneNumber</td>
                    <td>@hotel.StarCount</td>
                    <td>@hotel.Adress</td>
                    <td>@hotel.HotelURL</td>
                    <td>@hotel.IsActive</td>
                    <td>@hotel.IsDeleted</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        There is no Hotel. Please click here to
        <a class="alert-link" asp-action="Create">Create Hotel</a>
    </div>
}