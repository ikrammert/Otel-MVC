@model IEnumerable<Hotel>

@if (Model.Count() > 0)
{
    <h6 class="display-6">
        Hotels (@Model.Count())
    </h6>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number</th>
                <th>Created At</th>
                <th>Star</th>
                <th>Adress</th>
                <th>Url</th>
                <th>Aktif</th>
                <th>Silinmiş</th>
                <th>Detail</th>
                @* <th><button id="deleteSelected" class="btn btn-danger" onclick="confirmDelete()">Seçilenleri Sil</button></th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (Hotel hotel in Model)
            {
                <tr>
                    <td>@hotel.HotelName</td>
                    <td>@hotel.PhoneNumber</td>
                    <td>@hotel.CreateAt</td>
                    <td>@hotel.StarCount</td>
                    <td>@hotel.Adress</td>
                    <td>@hotel.HotelURL</td>
                    <td>@hotel.IsActive</td>
                    <td>@hotel.IsDeleted</td>
                    <th><a asp-action="Get" asp-route-id="@hotel.HotelId" class="btn btn-secondary">Hotel Detail</a></th>
                    @* <th><input type="checkbox" class="delete-checkbox" data-hotel-id="@hotel.HotelId" /></th> *@
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        There is no Hotel. Please click here to
        <a class="alert-link" asp-action="Create">Create Hotel</a>
    </div>
}